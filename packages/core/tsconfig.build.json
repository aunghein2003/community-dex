{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "esnext",
    "resolveJsonModule": true,
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    "skipErrorChecking": true
  }
}